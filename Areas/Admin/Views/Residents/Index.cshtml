@model IEnumerable<IRRCMS.EntityModelsClasses.Resident>

@{
    ViewBag.Title = "فهرست";
}

<h2>@ViewBag.Title</h2>
<div class="col-md-12" >
    <p>
        <a href="@Url.Action("Create")" class="btn btn-success btn-sm bottom-space">
            <span class="fa fa-plus"></span>
            افزودن
        </a>
    </p>
</div>
<div class="table-responsive col-md-12">
	<table class="table " id="ResidentsIndexTable">
		<tr id="ftr">
					<th>
				@Html.DisplayNameFor(model => model.BuildingUnit.UnitNo)
			</th>
							<th>
				@Html.DisplayNameFor(model => model.NumOfOccupants)
			</th>
				<th></th>
		</tr>

	@foreach (var item in Model) {
		<tr>
					<td>
				@Html.DisplayFor(modelItem => item.BuildingUnit.UnitNo)
			</td>
						<td>
				@Html.DisplayFor(modelItem => item.User.Email)
			</td>
					<td>
				@Html.DisplayFor(modelItem => item.NumOfOccupants)
			</td>
				<td>
				@Html.ActionLink("ویرایش", "Edit", new { id=item.Id }) |
				@Html.ActionLink("جزئیات", "Details", new { id=item.Id }) |
				<a href="@Url.Action("حذف", new { id = item.Id })" class="btn btn-sm btn-danger">
                    <span class="fa fa-remove"></span>
                </a>
			</td>
			</tr>
	}

	</table>
</div>
