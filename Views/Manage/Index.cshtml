    @Html.BeginForm("Index", "Manage", FormMethod.Post, new { role = "form" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "نام", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Family, "نام خانوادگی", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Family, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CellPhone, "شماره تلفن همراه", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NationalCode, "شماره ملی", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.NationalCode, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Gender, "جنسیت", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LandLinePhoneNumber, "شماره تلفن ثابت", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.LandLinePhoneNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MartialStatus, "وضعیت تاهل", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.MartialStatus, new { @class = "form-control" })
    </div>

</div>
